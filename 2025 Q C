# Question 16 (a)
# Examination Number:

def get_grade(result):
    if result >= 80:
        grade = "Distinction"
    elif result >= 65:
        grade = "Upper Merit"
    elif results >= 40:
        grade = "Pass"
    else:
        grade = "Unsuccessful"
    return grade


# Calculate and display the mean of a list of results
results = [39, 32, 62, 88, 51, 62, 64, 81, 77]  # Initialise the list
N = len(results)  # Initialise N to the number of results
total = 0         # Initialise the running total to 0

# Loop N times
for i in range(N):
    total = total + results[i]  # Running total

# Divide by the total number of results to give the mean
arithmetic_mean = round(total/len(results),2)

# Display the answer
print("The mean percentage mark is", arithmetic_mean) 
grade = get_grade(arithmetic_mean)
print("The grade for average results is", grade)

lowest = min(results)
highest = max(results)
print("the lowest resut is", lowest)
print("the highest resut is", highest)

count_under_40 = 0 
count_50_79 = 0 

for score in results: 
  if score < 40:
    count_under_40 +=1
  if 50 <= score <= 79:
    count_50_79 +=1 
   
   print("number of scores below 40 : ",count_under_40 ) 
   print("number of scores between 50 and 79 : ",count_50_79)
    
